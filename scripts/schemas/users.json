{
  "name": "users",
  "type": "base",
  "system": false,
  "schema": [
    {
      "name": "email",
      "type": "email",
      "required": true,
      "unique": true,
      "options": {
        "exceptDomains": [],
        "onlyDomains": []
      }
    },
    {
      "name": "name",
      "type": "text",
      "required": true,
      "options": {
        "max": 255
      }
    },
    {
      "name": "avatar",
      "type": "file",
      "required": false,
      "options": {
        "maxSelect": 1,
        "maxSize": 5242880,
        "mimeTypes": ["image/jpeg", "image/png", "image/gif"],
        "thumbs": ["100x100"]
      }
    },
    {
      "name": "verified",
      "type": "bool",
      "required": false,
      "options": {}
    },
    {
      "name": "subscription_tier",
      "type": "select",
      "required": false,
      "options": {
        "maxSelect": 1,
        "values": ["free", "pro", "enterprise"]
      }
    }
  ],
  "indexes": [
    {
      "name": "idx_users_email",
      "unique": true,
      "fields": ["email"]
    }
  ],
  "listRule": "@request.auth.id != \"\"",
  "viewRule": "@request.auth.id != \"\"",
  "createRule": "",
  "updateRule": "@request.auth.id = id",
  "deleteRule": "@request.auth.id = id"
}
